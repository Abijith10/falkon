{
    "id": "org.kde.Falkon",
    "runtime": "org.kde.Platform",
    "runtime-version": "master",
    "sdk": "org.kde.Sdk",
    "rename-icon": "falkon",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "command": "falkon",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=host",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],

    "modules": [
        {
            "name": "falkon",
            "build-options": {
                "env": {
                    "FALKON_PREFIX": "/app"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.kde.org/falkon.git"
                },
                {
                    "type": "script",
                    "commands": [ "qmake" ],
                    "dest-filename": "configure"
                }
            ]
        }
    ]
}
